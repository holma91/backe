{
  "env": {
    "node": true,
    "es6": true
  },
  "parser": "@babel/eslint-parser",
  "extends": [
    "eslint:recommended",
    // "airbnb",
    // "plugin:import/errors",
    // "plugin:import/warnings",
    // always put prettier at last
    "prettier"
  ],
  "parserOptions": {
    "requireConfigFile": false,
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "semi": ["warn", "always"],
    "quotes": ["warn", "single"]
  }
}